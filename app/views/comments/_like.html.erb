<% if user_signed_in? %>
 <% if comment.liked_by?(current_user) %>
   <%= link_to comment_like_path(@comment), remote: true,method: :post, id: "like_#{comment.id}" do %>
   ♥
   <% end %>
 <% else %>
   <%= link_to comment_unlike_path(@comment), remote: true,method: :delete, id: "like_#{comment.id}" do %>
   ♡
   <% end %>
 <% end %>
<% else %>
   <%= link_to comment_like_path(@comment), remote: true, id: "like_#{comment.id}" do %>
   ♥
   <% end %>
<% end %>