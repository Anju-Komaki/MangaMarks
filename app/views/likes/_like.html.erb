 <% if comment.liked_by?(current_user) %>
   <%= link_to "/comics/#{@comic}/comments/#{comment.id}", method: :delete, remote: true do %>
   ♥
   <%= comment.likes.count %>
   <% end %>
 <% else %>
   <%= link_to "/comics/#{@comic}/comments/#{comment.id}", method: :post, remote: true do %>
   ♡
   <%= comment.likes.count %>
   <% end %>
 <% end %>
<% else %>
    ♥
   <%= comment.favorites.count %>
<% end %>