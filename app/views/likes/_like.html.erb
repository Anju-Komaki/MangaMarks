<% if user_signed_in? %>
 <% if comment.liked_by?(current_user) %>
   <%= link_to comic_comment_like_path([comic_id: @comic, comment_id: comment.id]), method: :delete, remote: true do %>
   ♥
   <%= comment.likes.count %>
   <% end %>
 <% else %>
   <%= link_to comic_comment_likes_path([comic_id: @comic, comment_id: comment.id]), method: :post, remote: true do %>
   ♡
   <%= comment.likes.count %>
   <% end %>
 <% end %>
<% else %>
    ♥
   <%= comment.favorites.count %>
<% end %>