<!DOCTYPE html>
<html>
  <head>
    <title>MangaMarks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header>
    <div class="container">
    <nav>
    <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if user_signed_in? %>
      <li><%= link_to t('.Top'), root_path %></li>
      <% if unchecked_notificatons.any? %>
       <i class="fa fa-circle" style="color: gold;"></i>
      <% end %>
      <li><%= link_to t('.Notice'), notifications_path %></li>
      <li><%= link_to t('.Trend'), comics_path %></li>
      <li><%= link_to t('.News'), informations_path %></li>
      <li><%= link_to t('.Mypage'), user_path(current_user) %></li>
      <li><%= link_to t(".Logout"), destroy_user_session_path, method: :delete %></li>
      <li><%= link_to('日本語', :locale => 'ja') %></li>
      <li><%= link_to('English', :locale => 'en') %></li>
    <% elsif admin_signed_in? %>
      <li><%= link_to ' 漫画', admins_comics_path  %></li>
      <li><%= link_to ' 会員', admins_users_path  %></li>
      <li><%= link_to 'お知らせ', admins_informations_path %></li>
      <li><%= link_to "ログアウト", destroy_admin_session_path , method: :delete %></li>
    <% else %>
      <li><%= link_to t('.Top'), root_path %></li>
      <li><%= link_to t(".About"), homes_about_path %></li>
      <li><%= link_to t(".News"), informations_path %></li>
      <li><%= link_to t(".SignUp"), new_user_registration_path %></li>
      <li><%= link_to t(".Login"), new_user_session_path %></li>
      <li><%= link_to('日本語', :locale => 'ja') %></li>
      <li><%= link_to('English', :locale => 'en') %></li>
    <% end %>
     <!--検索-->
     <div class="search-modal-wrapper" id="search-modal">
      <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag 'search[content]' %>
        <%= select_tag 'search[column]', options_for_select({ "作品名" => "title", "作者" => "author","title" => "title_en", "author" => "author_en" }) %>
        <%= select_tag 'search[method]', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
      <%= submit_tag '検索' %>
      <% end %>
     </div>
  </ul>
</nav>

 </div>
</header>
    <%= yield %>
  </body>
</html>
