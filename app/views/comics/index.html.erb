<div class="container">
	<div class="row">
	  <h1><%= t('.trend') %></h1><br>

	   <!--タグ一覧-->
	    <% @comics.each do |comic| %>
	     <% comic.tag_list.each do |tag| %>
	      <%= link_to tag, comics_path(tag_name: tag) %>
	     <% end %>
	    <% end %>

	  <br>

	   <!--作品一覧-->
	   	<% @comics.each do |comic| %>
	     <%= link_to comic_path(comic.id) do %>
	      <%= attachment_image_tag comic,:comic_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %>
	     <% end %><br>
	     <%= comic.title %><br>
	    <% end %>

    </div>
</div>