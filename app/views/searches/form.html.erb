<div class="container">
  <div class="row">
    <h1>
      <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
      <%= t('.search') %>
    </h1>

    <div class="form-group">
      <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag 'search[content]' %>
        <%= select_tag 'search[column]', options_for_select({ "作品名" => "title", "作者" => "author","title" => "title_en", "author" => "author_en" }) %>
        <%= select_tag 'search[method]', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
        <%= submit_tag '検索', class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>
    </div>
  </div>
</div>
