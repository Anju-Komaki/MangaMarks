<div class="container">
	<div class="row">
		<h4>お気に入り推移</h4>
		<%= line_chart Bookmark.group(:comic_id).group_by_week(:created_at).count, width: "50%", height: "75%" %>
	 		<%= link_to "新規追加", new_admins_comic_path, class: "image-circle pull-left glyphicon glyphicon-plus" %>
	 		<%= link_to 'タグ追加', admins_tags_path, class: "btn btn-warning pull-right" %><br>
	 		<p style="color: #ff6347;"><%= flash[:message] %></p>
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>ID</th>
							<th>ISBNコード</th>
							<th>タイトル</th>
							<th>作者</th>
							<th>出版社</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
				        <% @comics.each do |comic| %>
				        <tr>
							<td><%= link_to comic.id, admins_comic_path(comic.id) %></td>
							<td><%= comic.isbn_code %></td>
							<td><%= comic.title %></td>
							<td><%= comic.author %></td>
							<td><%= comic.publisher %></td>
							<td><%= link_to 'edit', edit_admins_comic_path(comic.id) %></td>
							<td><%= link_to 'destroy', admins_comic_path(comic.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
    </div>
</div>