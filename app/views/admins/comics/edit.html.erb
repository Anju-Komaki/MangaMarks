<div class="row">
    <div class="col-xs-9">
      <h2 class="form-header-title">漫画の情報編集</h2>
        <%= form_for(@comic, url: edit_admins_comic_path) do |f| %>
         <% if @comic.errors.any? %>
          <div id="error_explanation">
           <h2><%= @comic.errors.count %>件のエラーが発生しました。</h2>
           <ul>
           <% @comic.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
     <% end %><br>
      <p>ISBNコード</p>
      <%= f.text_field :isbn_code %><br>
      <p>タイトル</p>
      <%= f.text_field :title %><br>
      <p>作者</p>
      <%= f.text_field :author %><br>
      <p>出版社</p>
      <%= f.text_field :publisher %><br>
      <p>タイトル(英語)</p>
      <%= f.text_field :title_en %><br>
      <p>作者(英語)</p>
      <%= f.text_field :author_en %><br>
      <p>出版社(英語)</p>
      <%= f.text_field :publisher_en %><br>
      <p>概要</p>
      <%= f.text_area :body, class:"form-control" %><br>
      <p>表紙</p>
      <%= f.attachment_field :comic_image %>
      <p>タグ</p>
       <%= f.collection_check_boxes(:tag_ids,Tag.all,:id,:name) do |tag| %>
       <%= tag.label do %>
        <%= tag.check_box %>
        <%= tag.text %>
       <% end %>
      <% end %><br>
      <%= f.submit "submit", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>
</div>
</div>