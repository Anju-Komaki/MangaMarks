<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h2 class="form-header-title">漫画の新規登録</h2>
       <p style="color: #ff6347;"><%= flash[:message] %></p>
        <%= form_for(@comic, url: new_admins_comic_path) do |f| %>
         <% if @comic.errors.any? %>
          <div id="error_explanation">
           <h2><%= @comic.errors.count %>件のエラーが発生しました。</h2>
           <ul>
           <% @comic.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
     <% end %><br>
     <div class="form-row">
      <div class="form-group">
        <label class="col-form-label col-sm-2">ISBNコード</label>
        <div class="col-sm-10">
        <%= f.text_field :isbn_code, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">タイトル</label>
        <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">作者</label>
        <div class="col-sm-10">
        <%= f.text_field :author, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">出版社</label>
        <div class="col-sm-10">
        <%= f.text_field :publisher, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">タイトル(英語)</label>
        <div class="col-sm-10">
        <%= f.text_field :title_en, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">作者(英語)</label>
        <div class="col-sm-10">
        <%= f.text_field :author_en, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">出版社(英語)</label>
        <div class="col-sm-10">
        <%= f.text_field :publisher_en, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">概要</label>
        <div class="col-sm-10">
        <%= f.text_area :body, class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-form-label col-sm-2">表紙</label>
        <div class="col-sm-10">
        <%= f.attachment_field :comic_image, class: "form-control-file" %>
        </div>
      </div>

      <div class="form-check">
      <label class="col-form-label col-sm-2">タグ</label>
      <div class="col-sm-10">
       <%= f.collection_check_boxes(:tag_ids,Tag.all,:id,:name) do |tag| %>
       <%= tag.label do %>
        <%= tag.check_box %>
        <%= tag.text %>
       <% end %>
       <% end %>
      </div>
      </div>
      <%= f.submit "登録", class: "btn btn-primary col-xs-3 pull-right" %>
      <% end %>
     </div>
     </div>
  </div>
</div>