<div class="row">
  <%= form_for(@category, url: admins_categories_path) do |f| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        <h2><%= @category.errors.count %>件のエラーが発生しました。</h2>
          <ul>
          <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
      </div>
  <% end %><br>
  <div class="form-group">
     <div class="col-xs-2">
      <%= f.text_field :name, class: "form-control", placeholder: "カテゴリー入力" %>
     </div>
      <%= f.submit "追加", class: "btn btn-primary mb-2" %>
  </div>
<% end %>
</div>