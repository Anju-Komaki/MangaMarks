<div class="container">
	<div class="row">
	 <h1>お知らせ一覧</h1>
	 <p style="color: #ff6347;"><%= flash[:message] %></p>
	 <%= link_to 'お知らせ追加', new_admins_information_path, class: "image-circle pull-left glyphicon glyphicon-plus" %>
	 <%= link_to 'カテゴリー追加', admins_categories_path, class: "btn btn-warning pull-right" %>
	 <table class="table table-bordered">
	   	<thead>
	   		<tr>
	   			<th>日時</th>
	   			<th>タイトル</th>
	   			<th colspan="3"></th>
	   		</tr>
	   	</thead>
	   	<tbody>
	      <% @informations.each do |information| %>
	   		<tr>
	            <td><%= information.created_at.strftime('%Y/%m/%d') %></td>
	   			<td><%= link_to information.title, admins_information_path(information.id) %></td>
	   			<td><%= link_to '編集', edit_admins_information_path(information.id) %></td>
	   			<td><%= link_to '削除', admins_information_path(information.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
	        </tr>
	       <% end %>
		    </tbody>
	   </table>
    </div>
</div>