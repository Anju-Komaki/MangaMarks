<div class="row">
  <%= form_for(@tag, url: admins_tags_path) do |f| %>
    <% if @tag.errors.any? %>
      <div id="error_explanation">
        <h2><%= @tag.errors.count %>件のエラーが発生しました。</h2>
          <ul>
          <% @tag.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
      </div>
  <% end %><br>
  <div class="form-group">
     <div class="col-xs-2">
      <%= f.text_field :name, class: "form-control", placeholder: "タグ入力" %>
     </div>
      <%= f.submit "submit", class: "btn btn-primary mb-2" %>
  </div>
<% end %>
</div>