<div class="container">
 <div class="row">
   <!--ユーザ情報-->
   <%= link_to '変更', edit_admins_user_path(@user.id) %>
   <table class="table table-bordered">
		 <tr>
		 	 <td>登録日</td>
			 <td><%= @user.created_at.strftime('%Y/%m/%d') %></td>
		 </tr>
		 <tr>
		 	 <td>ユーザ名</td>
			 <td><%= @user.username %></td>
		 </tr>
		 <tr>
		 	 <td>メールアドレス</td>
			 <td><%= @user.email %></td>
		 </tr>
		 <tr>
		 	 <td>出身国</td>
			 <td><%= @user.country %></td>
		 </tr>
		 <tr>
		 	 <td>会員ステータス</td>
			 <td><% if @user.is_valid == true %>
			 	 <%= "有効会員" %>
			 	 <% else %>
			 	 <%= "退会済み" %>
			 	 <% end %>
			 </td>
		 </tr>
  </table>
 </div>
</div>