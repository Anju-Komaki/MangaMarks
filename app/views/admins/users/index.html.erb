<div class="container">
 <div class="row">
  <!--グラフ描画-->
  <%= pie_chart User.group(:country).count %>
  <%= link_to 'csv出力', csv_download_admins_users_path(format: :csv), class: 'btn btn-primary'%>
   <!--ユーザ情報-->
   <table class="table table-bordered">
	 <thead>
		 <tr>
			 <th>登録日</th>
			 <th>ユーザ名</th>
			 <th>メールアドレス</th>
			 <th>出身国</th>
			 <th>会員ステータス</th>
			 <th colspan="3"></th>
		 </tr>
	 </thead>

	 <tbody>
		 <% @users.each do |user| %>
		 <tr>
			 <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
			 <td><%= user.username %></td>
			 <td><%= user.email %></td>
			 <td><%= user.country %></td>
			 <td><% if user.is_valid == true %>
			 	 <%= "有効会員" %>
			 	 <% else %>
			 	 <%= "退会済み" %>
			 	 <% end %>
			 </td>
			 <td><%= link_to '詳細', admins_user_path(user.id) %></td>
		 </tr>
		 <% end %>
	 </tbody>
  </table>
 </div>
</div>