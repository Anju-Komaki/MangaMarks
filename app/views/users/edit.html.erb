<div class="container">
	<div class="row">
		<h2><%= t('.Editing Profile') %></h2>
		 <%= form_for(@user) do |f| %>
     	  <div class="form-row">
            <div class="form-group">
		     <label class="col-sm-2"><%= t('.username') %></label>
		     <div class="col-sm-10">
		      <%= f.text_field :username, placeholder: "username", class: "form-control" %>
		     </div>
		    </div>

		    <div class="form-group">
		     <label class="col-sm-2"><%= t('.caption') %></label>
		     <div class="col-sm-10">
		      <%= f.text_area :caption, placeholder: "caption", class: "form-control" %>
		     </div>
		    </div>

		    <div class="form-group">
		     <label class="col-sm-2"><%= t('.profile image') %></label>
		     <div class="col-sm-10">
		     <%= f.attachment_field :profile_image, class: "form-control-file" %>
		     </div>
		    </div>

		    <div class="row">
		    	<div class="col-xs-4 col-xs-offset-4">
				   <%= f.submit 'update', class: "btn btn-primary col-xs-3 pull-right" %>
				</div>
				<div class="col-xs-4">
		           <%= link_to t('.withdraw'), withdraw_path(current_user), class: "btn btn-danger" %>
		        </div>
		 <% end %>
		    </div>
		  </div>
	</div>
</div>