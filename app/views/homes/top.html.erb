<div class="container">
	<div class="row col-xs-offset-1">
		<h1><%= t('.Ranking') %></h1>
		<!--ランキングの表示：お気に入りの多い順(上位５件表示)-->
		 <% @rankings.each.with_index(1) do |comic, i| %>
		  <div class="col-xs-2">
		  <h4><%= i %></h4><br>
		  <%= attachment_image_tag comic,:comic_image, :fill, 100, 150, format: 'jpeg',fallback: "no_image.jpg" %>
		  <br>
		  <%= comic.title %>
		  </div>
		 <% end %>
		 <br>
		 <br>
		<!--ランキングの表示：お知らせ情報-->
		<div class="col-xs-12">
		 <h1><%= t('.Informations') %></h1>
		 <% @informations.each do |information| %>
		 <%= information.created_at.strftime('%Y/%m/%d') %>:
		 <%= link_to information.title, information_path(information.id) %>
		 <br>
		 <% end %>
		</div>
	</div>
</div>