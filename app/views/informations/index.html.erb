<div class="container">
	<div class="row">
	 <h1><%= t('.News') %></h1>
	 <div class="col-xs-3">
	 	<%= form_tag informations_path, method: :get do %>
	   		<%= select_tag :category_id,
	            options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
	                    { prompt: '全てを表示',
	                      onchange: 'submit(this.form);'}%>
      	<% end %>
     </div>
     <div class="col-xs-9">
		 <% @informations.each do |information| %>
		 	<h4><%= information.created_at.strftime('%Y/%m/%d') %></h4>
		    <h5><%= information.title %></h5>
		    <p><%= truncate(information.body) %></p>
		    <%= link_to '>>>', information_path(information.id) %>
		 <% end %>
     </div>
    </div>
</div>