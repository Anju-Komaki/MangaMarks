<div class="container">
	<div class="row">
	 <h1><%= t('.News') %></h1>
	 <% @informations.each do |information| %>
	   <% information.tag_list.each do |tag| %>
	   <%= link_to tag, informations_path(tag_name: tag) %>
	   <% end %>
	 <% end %>
	   <table class="table">
	   	<thead>
	   		<tr>
	   			<th><%= t('.date') %></th>
	   			<th><%= t('.title') %></th>
	   			<th colspan="3"></th>
	   		</tr>
	   	</thead>
	   	<tbody>
	      <% @informations.each do |information| %>
	        <% information.tag_list.each do |tag| %>
	   		<tr>
	            <td><%= information.created_at.strftime('%Y/%m/%d') %></td>
	   			<td><%= link_to information.title, information_path(information.id) %></td>
	   			<td><%= tag %></td>
	        </tr>
	        <% end %>
	       <% end %>
		    </tbody>
	   </table>
    </div>
</div>