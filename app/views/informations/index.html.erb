<div class="container">
	<div class="row">
	 <h1><%= t('.News') %></h1>
	   <table class="table">
	   	<thead>
	   		<tr>
	   			<th><%= t('.date') %></th>
	   			<th><%= t('.title') %></th>
	   			<th colspan="3"></th>
	   		</tr>
	   	</thead>
	   	<tbody>
	      <% @informations.each do |information| %>
	   		<tr>
	            <td><%= information.created_at.strftime('%Y/%m/%d') %></td>
	   			<td><%= link_to information.title, information_path(information.id) %></td>
	   			<td><%= render 'informations/tag_list', tag_list: information.tag_list %></td>
	        </tr>
	       <% end %>
		    </tbody>
	   </table>
    </div>
</div>