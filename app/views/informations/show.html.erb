<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<h1><%= @information.title %></h1>
	    </div>
	    <div class="col-xs-4">
        	<h5><%= @information.created_at.strftime('%Y/%m/%d') %></h5>
        </div>
        <div class="col-xs-12">
	 	     <p><%= safe_join(@information.body.split("\n"),tag(:br)) %></p>
	    		<% @information.categories.each do |category| %>
	  				<span class="category"><%= category.name %></span>
	 			<% end %>
	    </div>
	</div>
</div>