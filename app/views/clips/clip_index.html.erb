<div class="container">
	<div class="row">
            <%= render 'users/profile' %>
        <div>
        	<%= render 'users/follow_form' %>
        </div>

        <!--ユーザのブックマーク一覧の表示-->
        <h3><%= t('.Clip') %></h3>
        <h3><%= link_to t('.Bookmark'), user_path(@user) %></h3>
		<% @clips.each do |clip| %>
		 <% comic = Comic.find(clip.comic_id) %>
		 <%= link_to comic_path(comic.id) do %>
	      <%= attachment_image_tag clip.comic,:comic_image, :fill, 100, 150, format: 'jpeg',fallback: "no_image.jpg" %>
	     <% end %><br>
		 <%= clip.comic.title %><br>
		<% end %>
	</div>
</div>